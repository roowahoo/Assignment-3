{{#extends 'base'}}

{{#block 'content'}}
<h1>Update Product{{product.name}}</h1>
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    {{{form}}}
    <div>     
        {{#if product.image_url}}
        <img src="{{product.image_url}}"/>
        {{else}}
        <img src="" style="display:none"/>
        {{/if}}
    </div>
    <input type='hidden' role='uploadcare-uploader' name='uploaded_image' id='uploaded_image' />
    <input type='submit' value='Update Product' class='btn btn-primary' id='update_product' />
    {{/block}}
</form>

{{/extends}}

{{#block 'js'}}
<script>
    UPLOADCARE_PUBLIC_KEY = '1b13392e19004ca4680c';
     document.querySelector('#update_product').addEventListener('click', () => {
        document.querySelector('#id_image_url').value = document.querySelector('#uploaded_image').value
    })
</script>

<script src="https://ucarecdn.com/libs/widget/3.x/uploadcare.full.min.js" charset="utf-8"></script>
{{/block}}